<p id="notice"><%= notice %></p>

<h1>IQ opciones</h1>

<%= render '/home/botones_generales' %>

<%= render 'resultados' %>

<%= link_to 'Nueva Opción', new_opcion_path %> |
<%= link_to 'Regresar al home', home_path %>
<br>
<br>
<br>
<table class="datatable table table-hover table-striped display responsive no-wrap" id="tablas">
  <thead>
    <tr>
      <th>Juliano</th>
      <th>Inversión</th>
      <th>Par</th>
      <th>Minuto</th>
      <th>Resultado</th>
      <th>Porcentaje</th>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @opciones.each do |opcion| %>
      <tr class="<%= color(opcion.saldo) %>">
        <td><%= opcion.juliano %></td>
        <td><%= opcion.inversion %> USD</td>
        <td><%= opcion.par.nombre %></td>
        <!-- <td><%= image_tag(opcion.par.imagen_url) %></td> -->
        <td><%= opcion.reloj.minuto %></td>
        <td><%= resultado(opcion.resultado) %></td>
        <td><%= "#{opcion.porcentaje} %" %></td>
        <td><%= number_to_currency(opcion.saldo, unit: "USD ", separator: ",", delimiter: ".", precision: 2) %></td>
        <!--         
        <td><%#= link_to 'Mostrar', opcion %></td>
        <td><%#= link_to 'Editar', edit_opcion_path(opcion) %></td>
        <td><%#= link_to 'Borrar', opcion, method: :delete, data: { confirm: '¿Está usted seguro?' } %></td>
         -->
      </tr>
    <% end %>
  </tbody>
</table>
